{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,

    // Enable latest features
    "lib": ["ES2016"],
    "target": "ES2016",
    "module": "CommonJS",
    "moduleDetection": "force",

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,

    // Bundler options
    "outDir": "dist"
  },
  "include": ["src"]
}
